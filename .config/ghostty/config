# =============================================================================
# Scrollback
# NOTE: Your original value was astronomically large (10^19 bytes).
# 50MB is plenty and won't bloat memory.
# =============================================================================
scrollback-limit = 50000000


# =============================================================================
# Shell integration
# =============================================================================
shell-integration = zsh


# =============================================================================
# Performance
# =============================================================================
window-vsync = true


# =============================================================================
# Keybindings
# =============================================================================

# --- Config ---
keybind = cmd+s>r=reload_config
